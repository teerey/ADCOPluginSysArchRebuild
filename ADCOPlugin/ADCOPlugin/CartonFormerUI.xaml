<UserControl x:Class="ADCOPlugin.MyAddinControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ADCOPlugin"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="400"
             Background="White"
             Loaded="UserControl_Loaded">

    <!--Wraps Everything in border and adds space of 10-->
    <Border Padding="10" Margin="10,10,10,10">
        <Grid>
            <StackPanel x:Name="InitContent" Visibility="Visible">
                <Image Margin="5 0 0 40"  Source="pluginHeader.png" HorizontalAlignment="Center" Stretch="UniformToFill"/>
                <!--Carton Type-->
                <Grid Width="250">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <!--Column 1-->
                    <StackPanel Grid.Column="0">
                        <Button x:Name="GlueButton" Grid.Column="0" Click="GlueButton_Click" ClickMode="Press" Width="100" Height="100">
                            <Button.Effect>
                                <DropShadowEffect BlurRadius="1"/>
                            </Button.Effect>
                            <Image Source="GlueSymbol.png" HorizontalAlignment="Center" Width="80" OpacityMask="White" Height="80" />
                        </Button>
                    </StackPanel>

                    <!--Column 2-->
                    <StackPanel Grid.Column="1">
                        <Button x:Name="LockButton" Grid.Column="1" Click="LockButton_Click" Width="100" Height="100" Background="#FFDDDDDD">
                            <Button.Effect>
                                <DropShadowEffect BlurRadius="1"/>
                            </Button.Effect>
                            <Image Source="LockSymbol.png" HorizontalAlignment="Center" Width="95" OpacityMask="White" Height="95" />
                        </Button>
                    </StackPanel>
                </Grid>

                <TextBlock Margin="10"  HorizontalAlignment="Center" Text="Select former type" FontWeight="Bold" FontSize="18"/>
            </StackPanel>

            <StackPanel x:Name="GlueContent" RenderTransformOrigin="0.5,0.5" Visibility="Hidden">
                <StackPanel.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleX="-0.203"/>
                        <RotateTransform/>
                        <TranslateTransform X="-1.027"/>
                    </TransformGroup>
                </StackPanel.RenderTransform>
                <!--Makes a stack window-->
                <Grid>

                    <!--Buttons-->
                    <Grid.ColumnDefinitions>
                        <!--Makes columns for buttons to be placed-->
                        <ColumnDefinition Width="*" />
                        <!-- * is unit length. can enter 2* and doubles-->
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button x:Name="GlueApplyButton" Margin=" 0 0 10 0" Grid.Column="0" Content="Apply" Click="GlueApplyButton_Click"/>
                    <Button x:Name="GlueResetButton" Grid.Column="1" Content="Reset" Click="GlueResetButton_Click"/>
                    <Button x:Name="GlueBackButton" Margin="10 0 0 0" Grid.Column="2" Content="Back" Click="GlueBackButton_Click"/>
                    <!-- Margin func makes space between buttons
                                                                                w/ Left right top bottom-->

                </Grid>

                <TextBlock Text="Glue Former Critical Dimensions" FontWeight="Bold" Margin="0 10"/>

                <!--Graphical Reference for Parameters-->
                <Image Margin="10" Source="ADCOglueTemplate.png" Stretch="Fill" HorizontalAlignment="Center" Width="254.6" OpacityMask="White" />

                <TextBlock Text="Length Parameters (inches)" Margin="0 10 0 -5" HorizontalAlignment="Center" FontWeight="DemiBold"/>
                <!--a-->
                <TextBlock Text="a" Width="10" HorizontalAlignment="Center" RenderTransformOrigin="0.5,0.5" Margin="0 -5 0 0">
                    <TextBlock.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform Y="17" X="-85"/>
                        </TransformGroup>
                    </TextBlock.RenderTransform>
                </TextBlock>
                <TextBox Padding="2" IsReadOnly="False" Background="#eee" HorizontalAlignment="Center" Width="150" />

                <!--b-->
                <TextBlock Text="b" Width="10" HorizontalAlignment="Center" RenderTransformOrigin="0.5,0.5" Margin="0 -10 0 0">
                    <TextBlock.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform Y="17" X="-85"/>
                        </TransformGroup>
                    </TextBlock.RenderTransform>
                </TextBlock>
                <TextBox Padding="2" IsReadOnly="False" Background="#eee" HorizontalAlignment="Center" Width="150"/>

                <!--c-->
                <TextBlock Text="c" Width="10" HorizontalAlignment="Center" RenderTransformOrigin="0.5,0.5" Margin="0 -10 0 0">
                    <TextBlock.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform Y="17" X="-85"/>
                        </TransformGroup>
                    </TextBlock.RenderTransform>
                </TextBlock>
                <TextBox Padding="2" IsReadOnly="False" Background="#eee" HorizontalAlignment="Center" Width="150"/>

                <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2.3*"/>
                    </Grid.ColumnDefinitions>

                    <!--Path to Glue File-->
                    <TextBlock Grid.Column ="0" Text="File Path" Margin="10,10,6,10" TextAlignment="Right"/>
                    <TextBox x:Name="gluePathBox" Grid.Column ="1" Padding="2" IsReadOnly="True" Background="DarkGray" Margin="0,0,10,0" Height="22" Text="C:/path/to/generic/glue/part"/>
                </Grid>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
