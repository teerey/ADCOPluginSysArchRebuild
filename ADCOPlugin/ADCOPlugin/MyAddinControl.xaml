<UserControl x:Class="ADCOPlugin.MyAddinControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ADCOPlugin"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Border Padding="10">
        <StackPanel>
            <!--Some top Button-->
            <Button Margin="10 10 10 0" Grid.Column="0"  Click="Button_Click" >Select Part File</Button>
            <!--Description of Project button-->
            <TextBlock Text="Description of Project" FontWeight="Bold" Margin="0 10"/>
            <TextBox Name="txtEditor" Padding="2" Margin="10 0 10 0"></TextBox>
            
        </StackPanel>
    </Border>
</UserControl>
